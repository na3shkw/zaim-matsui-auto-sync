{
  "name": "zaim-matsui-auto-sync",
  "version": "0.1.2",
  "description": "松井証券のデータをZaimに自動連携するアプリケーション",
  "keywords": [
    "Zaim",
    "松井証券"
  ],
  "license": "MIT",
  "author": "na3shkw",
  "type": "module",
  "bin": {
    "sync-matsui-zaim": "./dist/commands/sync-matsui-zaim.js",
    "zaim-cli": "./dist/commands/zaim/index.js"
  },
  "scripts": {
    "start": "tsx --env-file=.env src/commands/sync-matsui-zaim.ts",
    "zaim-cli": "tsx --env-file=.env src/commands/zaim/index.ts",
    "build": "tsc",
    "postbuild": "chmod +x dist/commands/sync-matsui-zaim.js dist/commands/zaim/index.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage.enabled true"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^4.0.10",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dayjs": "^1.11.13",
    "oauth-1.0a": "^2.2.6",
    "pino": "^9.9.0",
    "playwright": "^1.55.1",
    "zod": "^4.1.9"
  }
}
